<Page x:Class="TestApp.Assets.Pages.MediaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestApp.Assets.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MediaPage"
      DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid Name="MediaGrid" Grid.RowSpan="2">
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="0.2"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <MediaElement Grid.Row="1" Grid.Column="1" Name="Media" LoadedBehavior="Play"/>
        <Button Grid.Column="1" 
                        Name="HideMedia_btn"                         
                        Style="{StaticResource closeBtn}" 
                        Content="X"
                        HorizontalAlignment="Right"
                        Command="{Binding HideMediaCommand}"/>
    </Grid>
</Page>
